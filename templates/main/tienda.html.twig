{% block content %}
<h1 class="text-3xl font-bold mt-6 mb-4">Nuestros Productos</h1>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for producto in productos %}
    <div class="border p-4 rounded shadow hover:shadow-lg transition-shadow">
        <h2 class="text-xl font-semibold">{{ producto.nombre }}</h2>
        <p class="text-gray-600">Precio: {{ producto.precio }} €</p>
        <p class="text-gray-500">Categoría: {{ producto.categoria.nombre }}</p>
        <button class="mt-2 bg-green-500 text-white py-1 px-3 rounded hover:bg-green-600">
            Comprar
        </button>
    </div>
    {% else %}
    <p>No hay productos disponibles.</p>
    {% endfor %}
</div>
{% endblock %}


