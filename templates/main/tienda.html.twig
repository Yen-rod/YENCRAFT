{% extends 'base.html.twig' %}

{% block content %}
<h1 class="text-3xl font-bold mt-6 mb-4">Nuestros Productos</h1>

{# Contenedor de productos con diseño responsivo en rejilla #}
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    {% for producto in productos %}
    <div class="border rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 bg-white overflow-hidden">
        {# Imagen del producto, ajustada al tamaño del contenedor #}
        <img src="{{ asset(producto.imagen) }}" alt="{{ producto.nombre }}" class="w-full h-48 object-cover">

        <div class="p-4">
            {# Nombre del producto con estilo destacado #}
            <h2 class="text-lg font-bold text-gray-800 truncate">{{ producto.nombre }}</h2>

            {# Precio del producto con estilo visible #}
            <p class="text-green-600 text-xl font-semibold mt-2">€{{ producto.precio }}</p>

            {# Categoría del producto con texto discreto #}
            <p class="text-gray-500 text-sm mt-1">Categoría: {{ producto.categoria.nombre }}</p>

            {# Botón para agregar al carrito #}
            <a href="{{ path('app_carrito_add', {'id': producto.id}) }}"
               class="mt-4 block text-center bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 transition-colors duration-200">
                Agregar al carrito
            </a>
        </div>
    </div>
    {% else %}
    <p class="text-gray-600 col-span-full text-center">No hay productos disponibles.</p>
    {% endfor %}
</div>
{% endblock %}
