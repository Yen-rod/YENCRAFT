{% extends 'base.html.twig' %}

{% block title %}Blog - YenCraft{% endblock %}

{% block content %}
<h1 class="text-3xl font-bold mt-6 mb-4">Artículos del Blog</h1>
<div class="space-y-6">
    {% for post in posts %}
    <div class="border-b pb-4">
        <h2 class="text-2xl font-semibold">{{ post.titulo }}</h2>
        <p class="text-gray-500 text-sm">Publicado el {{ post.fecha }}</p>
        <p class="mt-2 text-gray-700">
            Descubre más sobre {{ post.titulo | lower }}.
        </p>
        <a href="#" class="text-green-500 hover:text-green-700">Leer más</a>
    </div>
    {% endfor %}
</div>
{% endblock %}

