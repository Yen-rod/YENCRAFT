{% extends 'base.html.twig' %}

{% block title %}Editar Producto{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold mb-6">Editar Producto</h1>

    {# Incluye el formulario reutilizable, con un bot√≥n personalizado #}
    {{ include('producto/_form.html.twig', {'button_label': 'Actualizar'}) }}

